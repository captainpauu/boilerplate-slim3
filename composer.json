        "php": "^7.0",
        "ext-pdo": "*",
        "mathmarques/smarty-view": "^1.1",
        "slim/slim": "3.12.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
